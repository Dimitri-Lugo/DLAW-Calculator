<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (0.068, 0.068, 0.068, 1)

    

<CalculatorWidget>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            size_hint: (1, 0.2)  # Adjust the size of this row as needed
            padding: [10, 35]  # Add some padding if needed
            Button:
                text: "Calculator"
                background_normal: ''  # Remove the button's default background
                background_color: (0, 0, 0, 0)  # Transparent background
                on_press: self.color = 0, 1, 0, 1  # Change foreground color when pressed
                on_release: self.color = 1, 1, 1, 1  # Restore original foreground color when released
            Button:
                text: "Mortgage"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                on_press: self.color = 0, 1, 0, 1  # Change foreground color when pressed
                on_release: self.color = 1, 1, 1, 1  # Restore original foreground color when released
            
            Button:
                text: "Tip"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                on_press: self.color = 0, 1, 0, 1  # Change foreground color when pressed
                on_release: self.color = 1, 1, 1, 1  # Restore original foreground color when released

        TextInput:
            id: input_box
            font_size: 43
            multiline: False
            halign: "right"
            size_hint: (1, 0.35)
            background_color: (0, 0, 0, 0)
            foreground_color: (1, 1, 1, 1)

        GridLayout:
            cols: 4
            rows: 5

            ### Row 1 ####
            Button:
                text: "AC"
                font_size: 32
                on_press: root.clear()

            Button:
                text: "+/-"
                font_size: 32
                on_press: root.positive_negative()
                color: 0,1,0,1

            Button:
                text: "%"
                font_size: 32
                on_press: root.sings("%")
                color: 0,1,0,1

            Button:
                text: "/"
                font_size: 32
                on_press: root.sings("/")
                color: 0,1,0,1

            #### Row 2 #####
            Button:
                text: "9"
                font_size: 32
                on_press: root.button_value(9)

            Button:
                text: "8"
                font_size: 32
                on_press: root.button_value(8)

            Button:
                text: "7"
                font_size: 32
                on_press: root.button_value(7)

            Button:
                text: "x"
                font_size: 32
                on_press: root.sings("*")
                color: 0,1,0,1

            #### Row 3 ###
            Button:
                text: "6"
                font_size: 32
                on_press: root.button_value(6)

            Button:
                text: "5"
                font_size: 32
                on_press: root.button_value(5)

            Button:
                text: "4"
                font_size: 32
                on_press: root.button_value(4)

            Button:
                text: "-"
                font_size: 32
                on_press: root.sings("-")
                color: 0,1,0,1

            ### Row 4 ###
            Button:
                text: "3"
                font_size: 32
                on_press: root.button_value(3)

            Button:
                text: "2"
                font_size: 32
                on_press: root.button_value(2)

            Button:
                text: "1"
                font_size: 32
                on_press: root.button_value(1)

            Button:
                text: "+"
                font_size: 32
                on_press: root.sings("+")
                color: 0,1,0,1

            ### Row 5 ###
            Button:
                text: "^"
                font_size: 32
                on_press: root.sings("**")

            Button:
                text: "0"
                font_size: 32
                on_press: root.button_value(0)

            Button:
                text: "."
                font_size: 32
                on_press: root.dot()

            Button:
                text: "="
                font_size: 32
                on_press: root.results()
