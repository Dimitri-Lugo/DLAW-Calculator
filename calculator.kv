### Setting the apperance of the tab button and adding conditions to the state of it and what color will be shown as a result ###
<TabButton@ToggleButton>:
	background_normal: ''
	background_color: rgba(0,0,0,0)
	color: rgba(238,238,238,255) if self.state=='normal' else rgba(0,241,20,255)
	font_size: 16
    markup: True
    group: "tabbutton"

### Setting the apperance of the calculator button and adding conditions to the state of it and what color will be shown as a result ###
<CalculatorButton@Button>:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: rgba(33,33,33,255) if self.state=='normal' else rgba(0,0,0,255)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [50,]
    font_size: 24
### Root widget for the application. Establises the color of the box, the orientation of it, the color of the font, the font used, and the size of widgets ###
<CalculatorWidget>
    BoxLayout:
        canvas:
            Color:
                rgba: rgba(26,26,26,255)
            Rectangle:
                size: self.size

        orientation: "vertical"
        size: root.width, root.height

        Label:
            canvas.before:
                Color:
                    rgba: rgba(0,0,0,255)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (1, 0.065)
            text: "DLAW"
            font_size: 24
            font_name: 'kalam'
            color: rgba(0,241,20,255)

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.12)
            ### Establishing the functionality of the calculator, mortgage, and tip tabs ###
            TabButton:
                text: 'Calculator' if self.state=='normal' else '[u]Calculator[/u]'
                on_press: root.change_tab(0)
                state: 'down'

            TabButton:
                text: 'Mortgage' if self.state=='normal' else '[u]Mortgage[/u]'
                on_press: root.change_tab(1)

            TabButton:
                text: 'Tip' if self.state=='normal' else '[u]Tip[/u]'
                on_press: root.change_tab(2)

        Label:
            id: input_prompt
            size_hint: (1, 0.13)
            font_size: 18
            color: rgba(0,241,20,255)
        ### Text Input for the user. This is for the numbers that show up when the user inputs ###
        TextInput:
            id: input_box
            size_hint: (1, 0.12)
            font_size: 53
            multiline: False
            halign: "right"
            valign: "top"
            background_color: rgba(0, 0, 0, 0)
            foreground_color: rgba(255,255,255,255)

        Label:
            size_hint: (1, 0.005)
            canvas.before:
                Color:
                    rgba: rgba(40,44,51,255)
                Rectangle:
                    size: self.size
                    pos: self.pos
        ### Establishing the layout of the calculator ###
        GridLayout:
            size_hint: (1, 0.56)
            padding: (10, 40)
            spacing: (30, 10)
            cols: 4
            rows: 5

            ### Row 1 of buttons ####
            CalculatorButton:
                text: "AC"
                on_press: root.clear()

            CalculatorButton:
                text: "+/-"
                on_press: root.positive_negative()
                color: 0,1,0,1

            CalculatorButton:
                text: "%"
                on_press: root.sings("%")
                color: 0,1,0,1

            CalculatorButton:
                text: "/"
                on_press: root.sings("/")
                color: 0,1,0,1

            #### Row 2 of buttons #####
            CalculatorButton:
                text: "9"
                on_press: root.button_value(9)

            CalculatorButton:
                text: "8"
                on_press: root.button_value(8)

            CalculatorButton:
                text: "7"
                on_press: root.button_value(7)

            CalculatorButton:
                text: "x"
                on_press: root.sings("*")
                color: 0,1,0,1

            #### Row 3 of buttons ###
            CalculatorButton:
                text: "6"
                on_press: root.button_value(6)

            CalculatorButton:
                text: "5"
                on_press: root.button_value(5)

            CalculatorButton:
                text: "4"
                on_press: root.button_value(4)

            CalculatorButton:
                text: "-"
                on_press: root.sings("-")
                color: 0,1,0,1

            ### Row 4 of buttons ###
            CalculatorButton:
                text: "3"
                on_press: root.button_value(3)

            CalculatorButton:
                text: "2"
                on_press: root.button_value(2)

            CalculatorButton:
                text: "1"
                on_press: root.button_value(1)

            CalculatorButton:
                text: "+"
                on_press: root.sings("+")
                color: 0,1,0,1

            ### Row 5 of buttons ###
            CalculatorButton:
                text: "^"
                on_press: root.sings("**")

            CalculatorButton:
                text: "0"
                on_press: root.button_value(0)

            CalculatorButton:
                text: "."
                on_press: root.dot()

            CalculatorButton:
                text: "="
                on_press: root.results()
